@model DataServiceLayer.Models.View.RaportModel

@{
    string akcja = "Utworz";


    if (ViewBag.czyPostBack == true)
    {
        if (ViewBag.Error == true)
        {
            <div>
                "Bład przy próbie utworzenia raportu!"
            </div>
        }
        else
        {
            <div>
                Raport utworzony pomyslnie!
            </div>
        }
    }
    using (Html.BeginForm(akcja, "Raporty", FormMethod.Post))
    {
        <div class="container-fluid">
            <div class="container">

                <div class="row marg200200">
                    <div class="col-md-3 col-12">
                        <strong>@Html.LabelFor(Model => Model.DataOd , htmlAttributes: new { @class = "control-label labelIntro" })</strong>
                    </div>
                    <div class="col-md-3 col-12">
                        @Html.EditorFor(Model => Model.DataOd, new { htmlAttributes = new { @class = "form-control intro-input utworz", @id = "datepick2", @type="date" } })
                        <input type="hidden" id="alternate2" />
                        @Html.ValidationMessageFor(model => model.DataOd, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row marg200200">
                    <div class="col-md-3 col-6">
                        <strong>@Html.LabelFor(Model => Model.DataDo, htmlAttributes: new { @class = "control-label labelIntro"})</strong>
                       
                    </div>
                    <div class="col-md-3 col-6">
                        @Html.EditorFor(Model => Model.DataDo, new { htmlAttributes = new { @class = "form-control intro-input utworz", @id = "datepick", @type = "date" } })
                        <input type="hidden" id="alternate" />
                        @Html.ValidationMessageFor(model => model.DataDo, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
        if (Model != null)
        {
            <div class="container-fluid">
                <div class="container">
                    <div class="row">
                        <div class="col-12">
                            @Html.HiddenFor(model => model.IdRaportu)
                            <button type="submit" class="btn btn-primary">Zapisz Zmiany</button>
                        </div>
                    </div>
                </div>
            </div>
            @*<input type="submit" value="Zapisz zmiany">*@
            //button do usuniecia
        }
        else
        {
            <div class="container-fluid">
                <div class="container">
                    <div class="row">
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary">Stwórz</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    }

}
@section Scripts {

 <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js" integrity="sha384-vBWWzlZJ8ea9aCX4pEW3rVHjgjt7zpkNpZk+02D9phzyeVkE+jo0ieGizqPLForn" crossorigin="anonymous"></script>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css">
<!-- jQuery first, then Tether, then Bootstrap JS. -->

<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js"></script>
<!-- datepicker -->
<link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<link rel="stylesheet" href="/resources/demos/style.css">
<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
<script type="text/javascript">


    $(document).ready(function () {
        $("#datepick").click(function () { $("#datepick").datepicker('show'); });
        $("#datepick2").click(function () { $("#datepick2").datepicker('show'); });
    });
    if (!Modernizr.inputtypes.date) {
        $("#datepick").datepicker({
            buttonText: "Select",
            showOn: "button",
            buttonImage: "https://jqueryui.com/resources/demos/datepicker/images/calendar.gif",
            dateFormat: 'mm/dd/yy',
            altFormat: "yy-mm-dd",
            altField: '#alternate'
        });
    } else {
        $('#datepick').on('change', function () {
            $('#alternate').val(this.value);
        });
    }
    if (!Modernizr.inputtypes.date) {
        $("#datepick2").datepicker({
            buttonText: "Select",
            showOn: "button",
            buttonImage: "https://jqueryui.com/resources/demos/datepicker/images/calendar.gif",
            dateFormat: 'mm/dd/yy',
            altFormat: "yy-mm-dd",
            altField: '#alternate2'
        });
    } else {
        $('#datepick2').on('change', function () {
            $('#alternate2').val(this.value);
        });
    }
</script>

}

