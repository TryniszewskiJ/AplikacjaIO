@model DataServiceLayer.Models.View.RaportModel

@{
    string akcja = "Utworz";

    if (ViewBag.czyEdycja == true)
    {
        akcja = "Edytuj";
        <div class="container">
            <div class="row" style="margin-top:2.5%;margin-bottom:5%">
                <div class="col-12" style="font-family:Arial, Helvetica, sans-serif">
                    <span style="font-size:36px"><strong>Edytuj Promocję!</strong></span>
                </div>
            </div>
        </div>
        if (ViewBag.czyPost == true)
        {
            if (ViewBag.Status == true)
            {
                //tutaj ze sie zapisaly zmiany
                <div class="container">
                    <div class="row" style="margin-top:2.5%;margin-bottom:5%">
                        <div class="col-12" style="font-family:Arial, Helvetica, sans-serif">
                            <span style="font-size:32px;color:lawngreen"><strong>Udało sie zapisać zmiany!</strong></span>
                        </div>
                    </div>
                </div>
            }
            else
            {
                //tutaj inforamcja ze nie udalo sie zapisac zmian
                <div class="container">
                    <div class="row" style="margin-top:2.5%;margin-bottom:5%">
                        <div class="col-12" style="font-family:Arial, Helvetica, sans-serif">
                            <span style="font-size:32px;color:red"><strong>Nie Udało sie zapisać zmiany!</strong></span>
                        </div>
                    </div>
                </div>
            }
        }
    }
    else
    {
        <div class="container">
            <div class="row" style="margin-top:2.5%;margin-bottom:5%">
                <div class="col-12" style="font-family:Arial, Helvetica, sans-serif">
                    <span style="font-size:36px"><strong>Stwórz Raport!</strong></span>
                </div>
            </div>
        </div>
        if (ViewBag.czyPost == true)
        {
            if (ViewBag.Status == true)
            {
                //tutaj ze sie zapisaly zmiany
                <div class="container">
                    <div class="row" style="margin-top:2.5%;margin-bottom:5%">
                        <div class="col-12" style="font-family:Arial, Helvetica, sans-serif">
                            <span style="font-size:32px;color:lawngreen"><strong>Promocja została dodana!</strong></span>
                        </div>
                    </div>
                </div>

            }
            else
            {
                //tutaj inforamcja ze nie udalo sie zapisac zmian
                <div class="container">
                    <div class="row" style="margin-top:2.5%;margin-bottom:5%">
                        <div class="col-12" style="font-family:Arial, Helvetica, sans-serif">
                            <span style="font-size:32px;color:red"><strong>Promocja została dodana!</strong></span>
                        </div>
                    </div>
                </div>
            }
        }
    }
    using (Html.BeginForm(akcja, "Promocje", FormMethod.Post))
    {
        <div class="container-fluid">
            <div class="container">

                <div class="row marg200200">
                    <div class="col-md-2 col-12">
                        <strong>@Html.LabelFor(Model => Model.DataOd , htmlAttributes: new { @class = "control-label labelIntro" })</strong>
                    </div>
                    <div class="col-md-5 col-12">
                        @Html.EditorFor(Model => Model.DataOd, new { htmlAttributes = new { @class = "form-control intro-input", @id = "datepick2" } })
                        <i class="fa fa-calendar" style="font-size:35px" aria-hidden="true"></i>
                        @Html.ValidationMessageFor(model => model.DataOd, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row marg200200">
                    <div class="col-md-2 col-12">
                        <strong>@Html.LabelFor(Model => Model.DataDo, htmlAttributes: new { @class = "control-label labelIntro"})</strong>
                       
                    </div>
                    <div class="col-md-5 col-12">
                        @Html.EditorFor(Model => Model.DataDo, new { htmlAttributes = new { @class = "form-control intro-input ", @id = "datepick" } })
                        <i class="fa fa-calendar" style="font-size:35px" id="dp" aria-hidden="true"></i>
                        @Html.ValidationMessageFor(model => model.DataDo, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
        if (Model != null)
        {
            <div class="container-fluid">
                <div class="container">
                    <div class="row">
                        <div class="col-12">
                            @Html.HiddenFor(model => model.IdRaportu)
                            <button type="submit" class="btn btn-primary">Zapisz Zmiany</button>
                        </div>
                    </div>
                </div>
            </div>
            @*<input type="submit" value="Zapisz zmiany">*@
            //button do usuniecia
        }
        else
        {
            <div class="container-fluid">
                <div class="container">
                    <div class="row">
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary">Stwórz</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    }

}
@section Scripts {

    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js" integrity="sha384-vBWWzlZJ8ea9aCX4pEW3rVHjgjt7zpkNpZk+02D9phzyeVkE+jo0ieGizqPLForn" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css">
    <!-- jQuery first, then Tether, then Bootstrap JS. -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js"></script>
    <!-- datepicker -->
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="/resources/demos/style.css">
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script type="text/javascript">

            $(function () {
                $("#datepick").datepicker();
            });
            $(function () {
                $("#datepick2").datepicker(
                    {
                        buttonText: "Select",
                        format: 'dd-MM-yyyy',
                        changeYear: true,
                        changeMonth: true,
                        yearRange: '-100:+0',

                    });
            });
    </script>
}

