                @Html.EditorFor(model => model[i].NazwaPromocji)
            </td>
            <td>
                @Html.EditorFor(model => model[i].OpisPromocji)
            </td>
            <td>
                @Html.EditorFor(model => model[i].DataWdrozenia)
            </td>
