@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<table>
    <tr>
        <td>
            @Html.LabelFor(model => model.FirstOrDefault().NazwaPromocji)
        </td>
        <td>
            @Html.LabelFor(model => model.FirstOrDefault().OpisPromocji)
        </td>
        <td>
            @Html.LabelFor(model => model.FirstOrDefault().DataWdrozenia)
        </td>
        <td>
            @Html.LabelFor(model => model.FirstOrDefault().NazwaKierownika)
        </td>
        <td>

        </td>
