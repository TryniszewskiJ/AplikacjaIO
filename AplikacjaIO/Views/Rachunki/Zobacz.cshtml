@model DataServiceLayer.Models.View.RachunkiModel
@{
    ViewBag.Title = "Zobacz";
}


<div class="container-fluid">
    @if (ViewBag.Error != null)
    {
        if (ViewBag.Error == true)
        {
            <div class="container">
                <div class="row" style="margin-top:2.5%;margin-bottom:5%">
                    <div class="col-12" style="font-family:Arial, Helvetica, sans-serif">
                        <span style="font-size:32px;color:red"><strong>Blad przy zapisywaniu rachunku.\nSpróbuj ponownie</strong></span>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="container">
                <div class="row" style="margin-top:2.5%;margin-bottom:5%">
                    <div class="col-12" style="font-family:Arial, Helvetica, sans-serif">
                        <span style="font-size:32px;color:lawngreen"><strong>Zapisano rachunek!</strong></span>
                    </div>
                </div>
            </div>
        }
    }
    <div class="container">
        <div class="row" style="border-bottom:1px solid black">
            <div class="col-3" style="border-right:1px solid black;text-align:center">
                <strong style="font-size:20px;">@Html.LabelFor(model => model.IdRachunku)</strong>
            </div>
            <div class="col-3" style="border-right:1px solid black;text-align:center">
                <strong style="font-size:20px;">@Html.LabelFor(model => model.Wysokosc)</strong>
            </div>
            <div class="col-3" style="border-right:1px solid black;text-align:center">
                <strong style="font-size:20px;">@Html.LabelFor(model => model.DataRachunku)</strong>
            </div>
            <div class="col-3" style="border-right:1px solid black;text-align:center">
                <strong style="font-size:20px;">@Html.LabelFor(model => model.NazwaKasjera)</strong>
            </div>

        </div>
        <div class="row">
            <div class="col-3" style="text-align:center">
                @Html.DisplayFor(model => model.IdRachunku, new { htmlAttributes = new { @class = "form-control intro-input" } })
            </div>

            <div class="col-3" style="text-align:center">
                @Html.DisplayFor(model => model.Wysokosc, new { htmlAttributes = new { @class = "form-control intro-input" } })
            </div>

            <div class="col-3" style="text-align:center">
                @Html.DisplayFor(model => model.DataRachunku, new { htmlAttributes = new { @class = "form-control intro-input" } })
            </div>

            <div class="col-3" style="text-align:center">
                @Html.DisplayFor(model => model.NazwaKasjera, new { htmlAttributes = new { @class = "form-control intro-input" } })
            </div>
        </div>
    </div>
</div>


<div class="container-fluid" style="text-align:center;margin-top:20px;">
    <div class="container">
        <div class="row">
            <table style="border:1px solid black">
                <tr style="border:1px solid black">
                    <td style="width:30%;border:1px solid black">
                        <strong style="font-size:20px;">@Html.LabelFor(model => model.Sklad.FirstOrDefault().Ilosc)</strong>
                    </td>
                    <td style="width:30%;border:1px solid black"> 
                        <strong style="font-size:20px;">@Html.LabelFor(model => model.Sklad.FirstOrDefault().Cena)</strong>
                    </td>
                </tr>
                @for (int i = 0; i < Model.Sklad.Count; i++)
                {
                    <tr style="border:1px solid black">
                        <td style="width:30%;border:1px solid black">
                            @Html.DisplayFor(model => model.Sklad[i].Ilosc, new { htmlAttributes = new { @class = "form-control intro-input" } })
                        </td>
                        <td style="width:30%;border:1px solid black">
                            @Html.DisplayFor(model => model.Sklad[i].Cena, new { htmlAttributes = new { @class = "form-control intro-input" } })
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>

</div>






