@model DataServiceLayer.Models.View.LoginModel



@using (Html.BeginForm("Kasjer", "Login", FormMethod.Post))
{
    //w tym ifie wyswietla sie informacja o bledzie

    @Html.AntiForgeryToken()
    <div class="container">
        <div class="row" style="margin-top:2.5%">
            <div class="col-12" style="text-align:center;font-family:Arial, Helvetica, sans-serif">
                <span style="font-size:30px">Probujesz zalogowac się jako: <strong>KASJER</strong></span>
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-lg-8 center-div">
                <div class="form-control pdback w-text">
                    <div class="row">
                        <div class="col-12">
                         <div class="row">
                             <div class="col-12" style="font-size:26px;text-align:center">
                                 @if (!string.IsNullOrEmpty(ViewBag.Error))
                                 {
                                     <div class="text-danger">
                                         @ViewBag.Error
                                     </div>
                                     //dlapushazmiana
                                 }
                             </div>
                         </div>
                            <div class="row">
                                <div class="col-md-1 hy">
                                </div>
                                <div class="col-12 col-md-4 intro-text">
                                    @Html.LabelFor(model => model.Login, htmlAttributes: new { @class = "control-label labelIntro" })
                                </div>
                                <div class="col-12 col-md-6 intro-text">
                                    @Html.EditorFor(model => model.Login, new { htmlAttributes = new { @class = "form-control intro-input", @placeholder = "wprowadź swój login" } })
                                    @Html.ValidationMessageFor(model => model.Login, "", new { @class = "text-danger" })
                                
                                    <div class="col-md-1">

                                    </div>
                                </div>
                             </div>


                                <div class="row">
                                    <div class="col-md-1">
                                    </div>
                                    <div class="col-12 col-md-4 intro-text">
                                        @Html.LabelFor(model => model.Haslo, htmlAttributes: new { @class = "control-label labelIntro" })
                                    </div>
                                    <div class="col-12 col-md-6 intro-text">
                                        @Html.EditorFor(model => model.Haslo, new { htmlAttributes = new { @class = "form-control intro-input", @placeholder = "Wprowadź hasło." } })
                                        @Html.ValidationMessageFor(model => model.Haslo, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-md-1">

                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-1">

                            </div>
                            <div class="col-12 col-md-11" style="width:100%">
                                <input type="submit" value="Zaloguj" class="btn btn-primary">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


}

